diff --git a/cmake/FindNodejs.cmake b/cmake/FindNodejs.cmake
index 00ce5696c..0aeef5ab3 100644
--- a/cmake/FindNodejs.cmake
+++ b/cmake/FindNodejs.cmake
@@ -9,11 +9,6 @@ if(Nodejs_EXECUTABLE)
         OUTPUT_VARIABLE Nodejs_VERSION
         ERROR_QUIET
